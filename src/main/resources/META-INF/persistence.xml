<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.2"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
    <!-- Define persistence unit -->
    <persistence-unit name="persistenceMamglez">
    
    	<!-- define la clase para hibernate que implementa JPA -->
    	<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    	
    	<!--  define las clases que seran mapeadas al configurarse la conexion a la bbdd -->
    	<class>com.mamglez.proyectojpa.entity.Disquera</class>
    	<class>com.mamglez.proyectojpa.entity.Genero</class>
    	<class>com.mamglez.proyectojpa.entity.SubGenero</class>
    	
    	<properties>
    		<property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
    		<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/tienda_musical?serverTimezone=Europe/Madrid"/> 		
    		<property name="javax.persistence.jdbc.user" value="root"></property>
    		<property name="javax.persistence.jdbc.password" value="Mamglez001"/>
    		
    		<property name="hibernate.show_sql" value="true" />
    		<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
    	</properties>
    	
    </persistence-unit>
</persistence>